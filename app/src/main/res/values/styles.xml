<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">true</item>
    </style>

    <!--Style for Splash Screen-->
    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name ="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <style name="spinner_style" >
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/darkGreen</item>
        <item name="android:gravity">center_horizontal</item>50dp
    </style>
    <style name="text_style" >
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/darkGreen</item>
    </style>
    <style name="medium_text_style" >
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/darkGreen</item>
    </style>
    <style name="basket_product_style" >
        <item name="android:background">@drawable/customborder</item>
        <item name="android:paddingLeft">@dimen/padding_10</item>
        <item name="android:paddingTop">@dimen/padding_10</item>
        <item name="android:paddingBottom">@dimen/padding_10</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>
