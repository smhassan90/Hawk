<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item><layer-list>
        <item android:height="50dp" android:gravity="center">
            <shape>
                <gradient android:angle="0" android:endColor="#ffffff" android:startColor="@color/white" android:type="linear" />

                <stroke android:width="1dp" android:color="@color/darkOrange" />

                <corners android:radius="5dp" />

                <padding  android:left="@dimen/padding_10" android:right="@dimen/padding_10"/>
            </shape>
        </item>
        <item ><bitmap android:gravity="center_vertical|right" android:src="@drawable/spinner_dd" />   // you can use any other image here, instead of default_holo_dark_am
        </item>
    </layer-list></item>

</selector>